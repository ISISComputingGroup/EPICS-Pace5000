record(bo, "$(P)SIM") {
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(ZNAM, "NO")
    field(ONAM, "YES")
    field(VAL, "$(RECSIM=0)")
    field(PINI, "YES")
}

record(bo, "$(P)DISABLE") {
    field(DESC, "Disable comms")
    field(PINI, "YES")
    field(VAL, "$(DISABLE=0)")
    field(OMSL, "supervisory")
    field(ZNAM, "COMMS ENABLED")
    field(ONAM, "COMMS DISABLED")
}

#############################################

record(seq, "$(P)SET") {
  field(DESC, "Propagate values to setpoints")
  field(DOL1, "$(P)PRESSURE:SP_NO_ACTION")
  field(LNK1, "$(P)PRESSURE:SP CA")
  field(DOL2, "$(P)SLEW:SP_NO_ACTION")
  field(LNK2, "$(P)SLEW:SP CA")
  field(DOL3, "$(P)SLEW:MODE:SP_NO_ACTION")
  field(LNK3, "$(P)SLEW:MODE:SP CA")
  field(DO4,  "1")
  field(LNK4, "$(P)UNITS:SP:_SETTER.PROC")
  field(DOL5, "$(P)STATE:SP_NO_ACTION")
  field(LNK5, "$(P)STATE:SP CA")
}

record(seq, "$(P)STOP") {
  field(DESC, "Set Pressure SP to Pressure value")
  field(DOL1, "$(P)PRESSURE")
  field(LNK1, "$(P)PRESSURE:SP CA")
}

#############################################

record(ai, "$(P)PRESSURE") {
    field(DTYP, "stream")
    field(DESC, "Read Current Pressure")
    field(SCAN, "1 second")
    field(INP,  "@pace5000.proto getPressure $(PORT)")
    field(PREC, "6")
    field(EGU, "")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:PRESSURE")
    field(SDIS, "$(P)DISABLE")
    info(INTEREST, "HIGH")
    info(archive, "VAL")
}

record(ao, "$(P)PRESSURE:SP") {
    field(DTYP, "stream")
    field(DESC, "Set Pressure")
    field(OUT,  "@pace5000.proto setPressureSetpoint $(PORT)")
    field(PREC, "6")
    field(EGU, "")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:PRESSURE:SP")
    field(SDIS, "$(P)DISABLE")
    info(INTEREST, "HIGH")
    info(archive, "VAL")
}

record(ao, "$(P)PRESSURE:SP_NO_ACTION") {
    field(DESC, "Set Pressure but do not Action")
    field(PREC, "6")
    field(EGU, "")
    info(INTEREST, "LOW")
    info(archive, "VAL")
}

record(ai, "$(P)PRESSURE:SP:RBV") {
    field(DTYP, "stream")
    field(DESC, "Read last Pressure Setpoint")
    field(SCAN, "1 second")
    field(INP,  "@pace5000.proto getPressureSetpoint $(PORT)")
    field(PREC, "6")
    field(EGU, "")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:PRESSURE:SP:RBV")
    field(SDIS, "$(P)DISABLE")
    info(INTEREST, "MEDIUM")
    info(archive, "VAL")
}

